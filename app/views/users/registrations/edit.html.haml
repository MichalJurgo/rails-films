= form_for(resource, html: {class: 'form-signin basic-form'},  as: resource_name, url: registration_path(resource_name)) do |f|
  %h2.text-center.font-weight-bold Register
  = devise_error_messages!
  .form-group
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'
  .form-group
    = f.label :firstname
    = f.text_field :firstname, autocomplete: 'off', class: 'form-control'
  .form-group
    = f.label :lastname
    = f.text_field :lastname, autocomplete: 'off', class: 'form-control'
  .form-group
    = f.label :birthday
    = f.date_field :birthday, autocomplete: 'off', class: 'form-control'
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .form-group
    = f.label :password
    %i (leave blank if you don't want to change it)
    %br/
    = f.password_field :password, autocomplete: "off", class: 'form-control'
  .form-group
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
  .field
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password, autocomplete: "off", class: 'form-control'
  .actions
    = f.submit "Update", class: 'btn btn-primary'

  = render "devise/shared/links"
